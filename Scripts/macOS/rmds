#!/usr/bin/env zsh

# Description: Easily delete .DS_Store files.
#
# Usage: rmds
#        rmds <path>
#
# Written by GÃ¶ran Gustafsson (gustafsson.g at gmail.com).
# License: BSD 3-Clause.

if [[ $# -eq 0 ]]; then
  find . -type f -name .DS_Store -exec rm -v "{}" \;
elif [[ $# -eq 1 ]]; then
  find $1 -type f -name .DS_Store -exec rm -v "{}" \;
else
  echo "Usage: ${0:t} [PATH]..."
fi
