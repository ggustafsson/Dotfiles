#!/usr/bin/env zsh

# Description: Run "nnn" and afterwards change directory in current shell.
#
# ~/.zshrc:
#
#   compdef _nnn n3
#   alias n3="source n3"
#
# Usage: nnn
#
# Author: GÃ¶ran Gustafsson (gustafsson.g at gmail.com)
# License: BSD 3-Clause

last_path=~/.config/nnn/.lastd

nnn $*

if [[ -f $last_path ]]; then
  source $last_path
  rm $last_path &> /dev/null
fi
