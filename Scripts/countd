#!/usr/bin/env ruby

# Description: Calculates remaining days until date(s) specified in file
# ~/.countdowns. Entry format is "YYYY-MM-DD,Title".
#
# Usage: countd
#
# Author: GÃ¶ran Gustafsson (gustafsson.g at gmail.com)
# License: BSD 3-Clause

require "csv"

csv_file = "#{Dir.home}/.countdowns"

if !File.exist?(csv_file)
  abort "File '#{csv_file}' does not exist! Exiting..."
elsif CSV.read(csv_file).empty?
  abort "No entries found! Exiting..."
end

CSV.foreach(csv_file) do |row|
  # Print empty line before each entry except first.
  puts unless $. == 1

  unless row.size == 2
    puts "Row on line #{$.} is not 2 columns! Skipping..."
    next
  end

  date = row[0]
  title = row[1]

  begin
    future = Date.parse(date)
  rescue
    puts "Invalid date on line #{$.}! Skipping..."
    next
  end

  days_left = (future - Date.today).to_i
  puts "#{title}\n#{days_left} day(s) left until #{date}"
end
