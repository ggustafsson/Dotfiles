#!/usr/bin/env zsh

# Description: Start custom Tmux development setup.
#
# Usage: tmux-dev
#
# Author: GÃ¶ran Gustafsson (gustafsson.g at gmail.com)
# License: BSD 3-Clause

if [[ $HOST == Twoson ]]; then
  dir=~/Bitbucket
else
  dir=~/Projects
fi

# FIXME: Add fzf cd thingie before split...

tmux \
  new-window -c $dir nvim \; \
  split-window -v -c $dir -l "25%" \; \
  select-pane -t :.+ \; \
  rename-window dev
