#!/bin/bash

# Description: This script configures a Ubuntu system the way I like.
#
# Usage: setup-ubuntu
#
# Written by GÃ¶ran Gustafsson (gustafsson.g at gmail.com).
# License: BSD 3-Clause.

mkdir -p ~/.ssh && chmod 700 ~/.ssh
mkdir -p ~/.vim/backups
mkdir -p ~/.vim/pack/ggustafsson/start
mkdir -p ~/.vim/pack/others/start
mkdir -p ~/.vim/undos
mkdir -p ~/Projects

sudo apt install -y \
  ansible \
  ansible-lint \
  dnsutils \
  flac \
  flake8 \
  fzf \
  golang \
  html2text \
  links \
  nmap \
  pylint3 \
  ruby \
  shellcheck \
  tidy \
  tree \
  yamllint \
  zsh

sudo chsh -s /bin/zsh $USER

echo
git clone https://github.com/ggustafsson/Dot-Files.git ~/Projects/Dot\ Files
git clone https://github.com/ggustafsson/Static-Color-Scheme.git ~/.vim/pack/ggustafsson/start/Static\ Color\ Scheme

ln -s ~/Projects/Dot\ Files/Scripts ~/
ln -s ~/Projects/Dot\ Files/gitconfig ~/.gitconfig
ln -s ~/Projects/Dot\ Files/gitignore_global ~/.gitignore_global
ln -s ~/Projects/Dot\ Files/ssh_config ~/.ssh/config
ln -s ~/Projects/Dot\ Files/vim/after ~/.vim/after
ln -s ~/Projects/Dot\ Files/vim/templates ~/.vim/templates
ln -s ~/Projects/Dot\ Files/vimrc ~/.vimrc
ln -s ~/Projects/Dot\ Files/zshenv ~/.zshenv
ln -s ~/Projects/Dot\ Files/zshrc ~/.zshrc

ln -s ~/.vim/pack/ggustafsson/start/Static\ Color\ Scheme ~/Projects/Static\ Color\ Scheme
ln -s /usr/share/doc/fzf/examples ~/.vim/pack/others/start/fzf

sudo cp ~/Projects/Dot\ Files/motd /etc/motd

echo
~/Scripts/fetch-vim
