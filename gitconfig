[alias]
	ad = add
	ap = apply
	br = branch
	ch = checkout
	cl = clone
	co = commit --verbose
	di = diff
	lo = log
	pl = pull
	pu = push
	rb = rebase
	re = restore
	rv = revert
	sh = show
	st = status
	su = submodule
	sw = switch
	ta = tag

	commit-and-run = commit --all --message='Commit and run...'
	forgive-me-for-i-have-sinned = reset --soft HEAD~1
	fucked-up-beyond-all-repair = reset --hard @{upstream}

[core]
	excludesFile = ~/.gitignore_global
	pager = less -FRXi

[init]
	defaultBranch = master

[pull]
	rebase = true

[push]
	default = current
	autoSetupRemote = true

